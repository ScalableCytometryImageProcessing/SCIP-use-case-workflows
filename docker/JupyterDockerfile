FROM ehv:parent

RUN jupyter labextension install jupyterlab-plotly@4.14.3 @jupyter-widgets/jupyterlab-manager plotlywidget@4.14.3 @jupyterlab/toc

RUN pip install aquirdturtle_collapsible_headings

COPY jupyter_lab_config.py .

EXPOSE 8888
EXPOSE 8787

CMD ["mamba", "run", "-n", "env", "--cwd", "/app", "--no-capture-output", "jupyter", "lab", "--no-browser", "--allow-root", "--port=8888", "--ip=0.0.0.0", "--config=/app/jupyter_lab_config.py"]
